@{
    ViewBag.Title = "AndropIt";
}
@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title.</h1>
                <h2>@ViewBag.Message</h2>
            </hgroup>
            <p>
                Seriously, this is the new hotness, sign up right now. Like do it. Seriously.
            </p>
        </div>
    </section>
}
<h3>Your recent messages:</h3>
<ul data-bind="template: {name: 'messages-template', foreach: messages}"></ul>

<script type="text/html" id="messages-template">
    
        <!-- ko if: type==='text' -->
            <li data-bind="text: content"></li>
        <!--/ko -->
        <!-- ko if: type==='email' -->
            <li data-bind="text: content"></li>
        <!--/ko -->
        <!-- ko if: type==='url' -->
            <li><a data-bind="attr: {href: content, title: content}, text: content"></a> </li>
        <!--/ko -->
        <!-- ko if: type==='phone' -->
            <li data-bind="text: content"></li>
        <!--/ko -->
</script>

@section scripts {
    <script src="@Url.Content("~/Scripts/knockout-2.1.0.js")" type="text/javascript" ></script>
    <script src="@Url.Content("~/Scripts/jquery.signalR-1.0.0-alpha2.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/signalr/hubs")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/app.js")" type="text/javascript"></script>
}
}